@page
@model VetPet.App.Frontend.Pages.LoginModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Log In ";
}

<div class="text-center">
    <h1 class="display-4">Bienvenidos!</h1>
    <div class="row nomargin clearfix">
        <section style="background-color:#fff;height: 100%;border: 1px #AAA solid">
            <div class="container headermodal" style="float:left;width:50%">
                <div style="padding:20px">
                    <div class="col-md-10 offset-md-1 col-sm-12">
                        <div class="form-block">
                            <div data-form-type="formoid">
                                <!--Formbuilder Form-->
                                <br><span style="font-size:22px">Accede a VetPet</span><br><br>
                                <form action="../../../modules/inicio/login.php" method="POST"
                                    class="mbr-form form-with-styler" data-form-title="GestorVet Contacto"
                                    target="_parent">

                                    <div class="dragArea form-row">
                                        <span> Nombre de Usuario</span>
                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group" data-for="phone">
                                            <input type="text" id="login" name="login" value=""
                                                class="form-control input display-7">
                                        </div>
                                        <span>Contraseña</span>
                                        <div data-for="message" class="col-md-12 form-group">
                                            <input type="password" id="passwd" name="passwd" value=""
                                                class="form-control input display-7">
                                        </div>
                                        <div class="col-md-12 form-group">

                                            <div id="txtHint"></div>

                                        </div>
                                        <a href="modules.php?mod=portal&amp;file=contrasenia_olvidada"
                                            style="font-size: 13px;margin-top: 5px;" target="_parent" class="">Olvidé la
                                            contraseña</a>
                                        <br>
                                        <div class="col-lg-12 input-group-btn mt-2" style="text-align: left;">

                                            <button type="submit" class="btn btn-sm btn-bgr btn-primary"
                                                style="/*height: 25px;*/vertical-align: middle;"
                                                value="submit">ENTRAR</button>

                                        </div>
                                        <!--<br/><br/><a href="../consultores/modules.php?mod=inicio&file=index_consultores" style="font-size: 12px;margin-top: 5px;" target="_parent">Entrada Consultores</a>-->
                                    </div>




                                </form>
                                <!--Formbuilder Form-->


                            </div>

                        </div>

                    </div>
                </div>

            </div>
            <div style="width:50%:float:left"><img src="../placeholder.png" style="width:50%" class=""> </div>
        </section>
    </div>
    <p>Por ahora puedes ver el <a asp-page="/Home">Home Page</a> que aparecerá despúes de que el usuario inicie sesión
    </p>
    <a class="Loginv2-link" href="/admin">Ingresa a cuenta administrativa</a>
</div>
