@page "/admin/anotaciones/add"
@model VetPet.App.Frontend.AddAnotacionesModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sistema de clínica veterinaría";
}
<h1>Nueva anotación</h1>
<form method="post" class="mt-3">
    <div class="form-group">
        <label class="form-control" asp-for="idMascota">Mascota</label>
        <select class="form-control" asp-for="idMascota" asp-items="Model.mascotas"></select>
    </div>
    <div class="form-group">
        <label class="form-control" asp-for="cedulaVeterinario">Veterinario</label>
        <select class="form-control" asp-for="cedulaVeterinario" asp-items="Model.veterinarios"></select>
    </div>
    <div class="form-group">
        <label class="form-control" asp-for="anotacion.fecha">Fecha</label>
        <input class="form-control" asp-for="anotacion.fecha" value="@DateTime.Now.ToString()">
        <span class="text-danger" asp-validation-for="anotacion.fecha" ></span>
    </div>
    <div class="form-group">
        <label class="form-control" asp-for="anotacion.descripcion">Descripción</label>
        <textarea class="form-control" asp-for="anotacion.descripcion" row="4"></textarea>
        <span class="text-danger" asp-validation-for="anotacion.descripcion"></span>
    </div>
    <div class="form-group">
        <label class="form-control" asp-for="anotacion.medicamento">Medicamento</label>
        <textarea class="form-control" asp-for="anotacion.medicamento" row="4"></textarea>
        <span class="text-danger" asp-validation-for="anotacion.medicamento"></span>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
    <a href="./ListAnotacion" class="btn btn-primary">Cancelar</a>
</form>