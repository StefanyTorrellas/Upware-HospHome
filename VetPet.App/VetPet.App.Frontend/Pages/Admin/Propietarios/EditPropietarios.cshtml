@page "/admin/propietarios/edit"
@model VetPet.App.Frontend.EditPropietariosModel
@using VetPet.App.Dominio
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sistema de clínica veterinaría";
}
<h1>@Model.propietario.nombre @Model.propietario.apellido</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="propietario.cedula" class="col-sm-2">Cédula</label>
        <input asp-for="propietario.cedula" class="form-control" required>
        <span class="text-danger" asp-validation-for="propietario.cedula"></span>
    </div>
    <div class="form-group row">
        <label asp-for="propietario.nombre" class="col-sm-2">Nombre</label>
        <input asp-for="propietario.nombre" class="form-control">
        <span class="text-danger" asp-validation-for="propietario.nombre"></span>
    </div>
    <div class="form-group row">
        <label asp-for="propietario.apellido" class="col-sm-2">Apellido</label>
        <input asp-for="propietario.apellido" class="form-control">
        <span class="text-danger" asp-validation-for="propietario.apellido"></span>
    </div>
    <div class="form-group row">
        <label asp-for="propietario.edad" class="col-sm-2">Edad</label>
        <input asp-for="propietario.edad" class="form-control">
        <span class="text-danger" asp-validation-for="propietario.edad"></span>
    </div>
    <div class="form-group row">
        <label asp-for="propietario.genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="propietario.genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>   
        </div>
        <span class="text-danger" asp-validation-for="propietario.genero"></span>
    </div>
    <div class="form-group row">
        <label asp-for="propietario.ciudad" class="col-sm-2">Ciudad</label>
        <input asp-for="propietario.ciudad" class="form-control">
        <span class="text-danger" asp-validation-for="propietario.ciudad"></span>
    </div>
    <div class="form-group row">
        <label asp-for="propietario.direccion" class="col-sm-2">Dirección</label>
        <input asp-for="propietario.direccion" class="form-control">
        <span class="text-danger" asp-validation-for="propietario.direccion"></span>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Editar</button>
        <a class="btn btn-primary" asp-page="/Admin/Propietarios/ListPropietarios">Cancelar</a>
    </div>
</form>
