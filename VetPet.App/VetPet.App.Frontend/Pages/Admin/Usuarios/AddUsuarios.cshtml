@page
@model VetPet.App.Frontend.Pages.AddUsuariosModel
@{
	Layout = "_AdminLayout";
}
<h1>Agregar usuario</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="usuario.id"/>
    <div class="form-group row">
        <label asp-for="usuario.email" class="col-sm-2">Correo Electrónico</label>
        <input asp-for="usuario.email" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="usuario.password" class="col-sm-2">Contraseña</label>
        <input asp-for="usuario.password" class="form-control" value="" required>
    </div>  
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a href="/admin/user/list" class="btn btn-primary">Cancelar</a>
    </div>
</form>
