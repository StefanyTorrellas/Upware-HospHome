@page "/admin/usuarios/add"
@model VetPet.App.Frontend.AddUsuariosModel
@using VetPet.App.Dominio
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sistema de clínica veterinaría";
}
<h1>Agregar Usuario</h1>
<form method="post" class="mt-3">
    <input hidden asp-for="usuario.id"/>
    <div class="form-group row">
        <label asp-for="usuario.username" class="col-sm-2">User Name</label>
        <input asp-for="usuario.username" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="usuario.email" class="col-sm-2">Email</label>
        <input asp-for="usuario.email" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="usuario.password" class="col-sm-2">Contraseña</label>
        <input asp-for="usuario.password" class="form-control" value="" required>
    </div>   
    <div class="form-group row">
        <button type="submit" name="submit" formmethod="post" class="btn btn-primary">Guardar</button>
        <a asp-page="/Admin/Usuarios/ListUsuarios" class="btn btn-primary">Cancelar</a>
    </div>
</form>
