@page "/admin/user/list"
@model VetPet.App.Frontend.Pages.ListUsuariosModel
@{
    Layout = "_AdminLayout";
}
<h1>Gestionar usuarios</h1>
<p>En está pagina podrás gestionar los usuario</p>
<a class="btn btn-primary table-btn" asp-page="/Admin/Usuarios/AddUsuarios">Agregar usuario</a>
<table class="table table-dark">
<tr>
    <th scope="col">Correo</th>
    <th scope="col">Contraseña</th>
</tr>
@foreach(var usuario in Model.usuarios){
    <tr>
        <td>@usuario.email</td>
        <td>@usuario.password</td>
        <td><a class="btn btn-primary table-btn" asp-page="/Admin/Usuarios/DetailUsuarios" asp-route-id="@usuario.id">Detalles</a><br>
        <a class="btn btn-primary table-btn" asp-page="/Admin/Usuarios/EditUsuarios" asp-route-id="@usuario.id">Editar</a><br>
        <a class="btn btn-primary table-btn" asp-page="/Admin/Usuarios/DeleteUsuarios" asp-route-id="@usuario.id">Eliminar</a>
        <br>
    </tr>
}
</table>
