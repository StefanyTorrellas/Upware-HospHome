@page "/admin/citas/add"
@model VetPet.App.Frontend.AddCitasModel
@using VetPet.App.Dominio
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sistema de clínica veterinaría";
}
<h1>Crear cita</h1>
<p class="text-left">Aquí podrás añadir una nueva cita</p>
<p class="text-danger">@Model.mensaje</p>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="idMascota" class="form-control">Mascota</label>
        <select class="form-control" asp-for="idMascota" asp-items="@Model.mascotas"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cedulaVeterinario" class="form-control">Veterinario</label>
        <select class="form-control" asp-for="cedulaVeterinario" asp-items="@Model.veterinarios"></select>
    </div>
    <div class="form-group row">
        <label asp-for="cita.dia" class="form-control">dia</label>
        <input class="form-control" asp-for="cita.dia" value=@DateTime.Today.ToString("yyyy-MM-dd")>
        <span asp-validation-for="cita.dia" class="text-danger" ></span>
    </div>
    <div class="form-group row">
        <label asp-for="cita.hora" class="form-control">hora</label>
        <input class="form-control" asp-for="cita.hora" value=@DateTime.Now.AddMinutes(60).ToString("hh:00")>
        <span asp-validation-for="cita.hora" class="text-danger" ></span>
    </div>
    <div class="form-group row">
        <label asp-for="cita.descripcion" class="form-control">Descripción</label>
        <input asp-for="cita.descripcion" class="form-control">
        <span asp-validation-for="cita.descripcion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="./ListCita" class="btn btn-primary">Cancelar</a>
</form>