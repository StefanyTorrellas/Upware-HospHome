@page "/admin/citas/list"
@model VetPet.App.Frontend.ListCitasModel
@using VetPet.App.Dominio
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sistema de clínica veterinaría";
}
<h1>Gestionar citas</h1>
<p class="text-left">Aquí podrás gestionar tus citas</p>
<a asp-page="/Admin/Citas/AddCitas" class="btn btn-primary">Añadir Cita</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th>Mascota</th>
            <th>Veterinario</th>
            <th>Día</th>
            <th>Hora</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cita in Model.citas){
            <tr>
                <td>@cita.mascota.nombre</td>
                <td>@cita.veterinario.nombre</td>
                <td>@cita.dia.ToString("yyyy-MM-dd")</td>
                <td>@cita.hora.ToString("hh:mm")</td>
                <td>@cita.descripcion</td>
            </tr>
        }
    </tbody>
</table>